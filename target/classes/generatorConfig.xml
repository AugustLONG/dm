<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >
  <classPathEntry location="mysql-connector-java-5.1.24-bin.jar" />
  
  <context id="MySQLTables" targetRuntime="MyBatis3">
    <jdbcConnection driverClass="{jdbc.driverClassName}"
        connectionURL="{jdbc.url}"
        userId="{jdbc.username}"
        password="{jdbc.password}">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

    <javaModelGenerator targetPackage="cn.edu.ustb.dm.model" targetProject="DM">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="cn.edu.ustb.dm.map"  targetProject="DM">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="cn.edu.ustb.dm.dao"  targetProject="DM">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

    <table tableName="book_author_info" domainObjectName="BookAuthorInfo" >
      <property name="useActualColumnNames" value="true"/>
    </table>
    <table tableName="book_online_info" domainObjectName="BookOnlineInfo" >
      <property name="useActualColumnNames" value="true"/>
    </table>
    <table tableName="book_publishing_info" domainObjectName="BookPublishingInfo" >
      <property name="useActualColumnNames" value="true"/>
    </table>

  </context>
</generatorConfiguration>